<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
     <link rel="stylesheet" href="css/tasks.css">
    <script>
        document.write('<script src="http://' + (location.host || 'localhost').split(':')[0] +
        ':35729/livereload.js?snipver=1"></' + 'script>')
    </script>
    <script type="Text/Javascript" src="js/pretty.js"></script>
    <title>Document</title>
</head>
<body>
    <section class="landing">
        {{#if message}}
        <div style="text-align: center;" id="error" class="error alert{{message.type}}">
            <a style="cursor: pointer;" type="button" class="close" id="btnstate" value="Remove" onclick="removeDiv(this)"><img style="width: 20px; height: 20px;" type="image/svg" src="assets/cross-sign.svg" alt="cross"></a>
            <div class="msg"><strong>{{message.intro}}</strong> {{message.message}}</div>
        </div>
        {{/if}}
        <div class="bg">
            {{>nav}}
            <div class="timeline">
                <table width="100%">
                    <caption>{{calendar.year}} {{calendar.monthName}}</caption>
                    <thead>
                        <tr>
                            {{#each calendar.days}}<th>{{#ifeqday this.row '0'}}{{/ifeqday}}</th>{{/each}}
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            {{#each calendar.days}}<th>{{#ifeqdate this.row '0'}}{{/ifeqdate}}</th>{{/each}}
                        </tr>
                        <tr>
                            {{#each calendar.days}}<th>{{#ifeqdate this.row '1'}}{{/ifeqdate}}</th>{{/each}}
                        </tr>
                        <tr>
                            {{#each calendar.days}}<th>{{#ifeqdate this.row '2'}}{{/ifeqdate}}</th>{{/each}}
                        </tr>
                        <tr>
                            {{#each calendar.days}}<th>{{#ifeqdate this.row '3'}}{{/ifeqdate}}</th>{{/each}}
                        </tr>
                        <tr>
                            {{#each calendar.days}}<th>{{#ifeqdate this.row '4'}}{{/ifeqdate}}</th>{{/each}}
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </section>
    <section class="tasks">
        <div class="bgtask">
            <div class="memberabout">
                <h1>{{username}}</h1>
                <h3>Position: {{memberoradmin}}</h3>
                <h3>Department: {{department}}</h3>
                <h3>About: {{about}}</h3>
            </div>
            <div class="taskbar">
                <h1>Tasks</h1>
                <div class="taskflex">
                    <div>
                        <div></div>
                        <h1></h1>
                    </div>
                    <div>
                        <div></div>
                        <h1></h1>
                    </div>
                    <div>
                        <div></div>
                        <h1></h1>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>